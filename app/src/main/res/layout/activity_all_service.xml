                            android:gravity="center_horizontal"
                            android:text="Plumbing"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

